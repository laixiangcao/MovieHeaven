<?xml version="1.0" encoding="utf-8"?>
<com.jiumeng.movieheaven2.views.CustomerScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:orientation="vertical"
    android:background="@drawable/list_item_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/h_line"
            android:layout_marginTop="20dip"/>

        <RelativeLayout
            android:id="@+id/rl_notification_settings"
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="消息通知"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_clean_cache"
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="清理缓存"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <RelativeLayout
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="双击退出"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />

            <com.jiumeng.movieheaven2.views.ToggleButton
                android:id="@+id/tb_dbclick_quit"
                style="@style/option_item_toggleButton"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <RelativeLayout
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="启动时自动检测更新"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />

            <com.jiumeng.movieheaven2.views.ToggleButton
                android:id="@+id/tb_detection_update"
                style="@style/option_item_toggleButton"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <RelativeLayout
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="非wifi模式下不加载图片"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />

            <com.jiumeng.movieheaven2.views.ToggleButton
                android:id="@+id/tb_loading_img"
                style="@style/option_item_toggleButton"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <View
            style="@style/h_line"/>
        <View
            style="@style/h_line"
            android:layout_marginTop="20dip"/>

        <RelativeLayout
            android:id="@+id/rl_about"
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="关于电影天堂"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_exit"
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="退出"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View
            style="@style/h_line" />
    </LinearLayout>
</com.jiumeng.movieheaven2.views.CustomerScrollView>